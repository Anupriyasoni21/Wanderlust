<% layout("/layouts/boilerplate") %>
  <div class="row mt-3">
        <div class="col-8 offset-3 mt-3">
            <h3> Your Search Results</h3>
        </div>
<div class="card col-6 offset-3 show-card listing-card">
  <% if (listings.length === 0) { %>
    <p class="text-muted">No listings found matching your search.</p>
  <% } %>

  <div class="row">
    <% listings.forEach(listing => { %>
      <div class="card m-2" style="width: 18rem; border: none;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="No image found">
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
          <a href="/listings/<%= listing._id %>" class="btn btn-danger ">See full details</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
